@model List<AboutUs>
@{ ViewData["Title"] = "About Page"; }

<div class="backgro_mh">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="heding">
                    <h2>@ViewBag.BannerTitle</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- about  -->

@{
    foreach (var item in Model)
    {
        if (item.Id == 1)
        {
            <div id="about" class="about" style="background: url(../images/@item.BackgroundImage); background-repeat: no-repeat; background-size: cover; background-position: center;">
                <div class="container">
                    <div class="row display_boxflex">

                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="about-box">
                                <h2>About Us</h2>
                                <p>@item.Text</p>
                                <a href="Javascript:void(0)">Read More</a>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="about-box">
                                <figure> <img src="~/images/@item.Image" alt="Guitarist Ramish" /> </figure>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- end abouts -->
        }
    }
}
